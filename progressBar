public class progressBar {
int type;
int x,y,w,h;
int[] progress = new in[2];
String textTitle;
color c;
public progressBar(String textTitle, int type, int[] progress, int x, int y, int w, int h,color c) {
  this.progress = progress
  this.type = type;
  this.textTitle = textTitle;
  this.c = c;
  this.x = x;
  this.y = y;
  this.w = w;
  this.h = h;
}
 public void updateProgress(int[] p) {
  this.progress = p;
 }

 public void draw() {
  fill(c);
  rect(x,y,w,h);
  
  textAlign(CENTER,CENTER);
  textSize(25);
  text(textTitle,x+w/2,y+h/2);
  
  fill(255,255,255);
  rect(x,y,(w/this.progress[1])*this.progress[0],h);
}


}
